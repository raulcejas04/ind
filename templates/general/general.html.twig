{% extends 'base.html.twig' %}

{% block title %}Administración de {{tipo.tipo}}{% endblock %}

{% block body %}
    <div class="container w-100 p-3">
        <h2>Administración de {{tipo.tipo}}</h2>
        <div class="card mx-auto">             
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12 pb-2">
                        <a class="btn btn-primary" href="{{ path("generales_nuevo", {"id": tipo.id}) }}"><span class="fa fa-plus-circle"></span> Nuevo</a>
                        <div class="float-right">
                            {{ form_start(formBusqueda,{ 'attr' : { 'class': 'form-inline' } }) }}
                            <div class="form-group pr-2">
                                {{ form_widget(formBusqueda.busqueda) }}
                            </div>
                            {{ form_widget(formBusqueda.buscar) }}
                            {{ form_end(formBusqueda) }}
                        </div>
                    </div>
                </div>
                <table class="table table-hover table-bordered ">
                    <thead class="thead-light">
                        <tr >
                            <th>Id</th>
                            <th>{{ tipo.tipo }}</th>                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for registro in generales %}
                            <tr >
                                <td style="width:5%">{{ registro.id }}</td>
                                <td >{{ registro.descripcion}}</td>                                
                                
                                <td>  
                                    {{ include('general/_acciones.html.twig') }}                                    
                                </td>
                            </tr>
                        {%  endfor %}     
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{%  endblock %}