          
<div class="row">
    <div class="col-sm-12 pb-2">
        <table class="table table-hover table-bordered ">
            <thead class="thead-light">
                <tr class="d-flex" >
                    <th id="headerRazonSocial" class="col-4" data-nombre="razonSocial">
                        <div class="float-left">
                            Razón Social
                        </div>
                        <div class="float-right align-bottom">
                            <span class="fa fa-xs"/>
                        </div>
                    </th>
                    <th id="headerDomicilio" class="col-4" data-nombre="domicilio">
                        <div class="float-left">
                            Domicilio
                        </div>
                        <div class="float-right align-bottom">
                            <span class="fa fa-xs "/>
                        </div>
                    </th>  
                    <th id="headerEsDeposito" class="col-2" data-nombre="esDeposito">
                        <div class="float-left">
                            Depósito
                        </div>
                        <div class="float-right align-bottom">
                            <span class="fa fa-xs"/>
                        </div>
                    </th>
                    <th id="headerEsProduccion" class="col-2" data-nombre="esProduccion">
                        <div class="float-left">
                            Producción
                        </div>
                        <div class="float-right align-bottom">
                            <span class="fa fa-xs"/>
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for lugar in lugares %}
                    <tr class="d-flex">
                        <td class="col-4">{{ lugar.razonSocial }}</td>
                        <td class="col-4">{{ lugar.domicilio.calle + " " + lugar.domicilio.puerta}}</td>
                       {# <td class="col-2">{{ lugar.esProduccion ? 'false' : 'true'}}</td>
                        <td class="col-2">{{ lugar.esProduccion ? 'true' : 'false'}}</td> #}
                         <td class="col-2"></td>
                          <td class="col-2">{</td>
                    </tr>
                {%  endfor %}     
            </tbody>
        </table>
    </div>
</div>   
