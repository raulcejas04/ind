<h4 class="card-title">Producción</h4>
<div class="row">
    <div class="col-6">        
        <!-- residuos industriales -->          
        <div class="card">
            <div class="card-body">
                <div class="btn-toolbar" role="toolbar">
                    <div class="pr-4 pt-2">
                        ¿Produce residuos industriales?
                    </div>
                    {% if showButton %}
                        <div class="btn-group mr-2" role="group">
                            <button id="btnResiduosIndustrialesSi" type="button" class="btn btn-primary btn-sm">Si</button>
                        </div>
                        <div class="btn-group mr-2" role="group">            
                            <button id="btnResiduosIndustrialesNo" type="button" class="btn btn-primary btn-sm">No</button>
                        </div>                        
                    {% endif %}
                </div> 
                <br/>
                <div class="form-group hideProduccion">
                    {{ form_widget(formulario.tieneResiduosIndustriales) }}
                </div> 
                <div id="divResiduosIndustriales">
                    <div class="form-group">
                        {{ form_label(formulario.tipoResiduoIndustrial) }}
                        {{ form_widget(formulario.tipoResiduoIndustrial) }}
                    </div> 
                    <div class="form-group">
                        {{ form_label(formulario.residuoIndustrial) }}
                        {{ form_widget(formulario.residuoIndustrial) }}
                    </div> 
                    <div class="btn-toolbar" role="toolbar">
                        <div class="pr-4 pt-2">
                            ¿Efluentes líquidos?
                        </div>
                        {% if showButton %}
                            <div class="btn-group mr-2" role="group">
                                <button id="btnEfluentesLiquidosSi" type="button" class="btn btn-primary btn-sm">Si</button>
                            </div>
                            <div class="btn-group mr-2" role="group">            
                                <button id="btnEfluentesLiquidosNo" type="button" class="btn btn-primary btn-sm">No</button>
                            </div>                        
                        {% endif %}
                    </div> 
                    <br/>
                    <div  id="divTratamientoPrevioVuelco" class="btn-toolbar" role="toolbar">
                        <div class="pr-4 pt-2">
                            ¿Tratamiento previo al vuelco?
                        </div>
                        {% if showButton %}
                            <div class="btn-group mr-2" role="group">
                                <button id="btnTratamientoPrevioSi" type="button" class="btn btn-primary btn-sm">Si</button>
                            </div>
                            <div class="btn-group mr-2" role="group">            
                                <button id="btnTratamientoPrevioNo" type="button" class="btn btn-primary btn-sm">No</button>
                            </div>                        
                        {% endif %}
                    </div> 
                    <br/>
                    <div class="form-group hideProduccion">
                        {{ form_widget(formulario.tieneEfluentesLiquidos) }}
                    </div> 
                    <div class="form-group hideProduccion" >
                        {{ form_widget(formulario.tieneTratamientoPrevioVuelco) }}
                    </div> 
                    <div class="form-group">
                        {{ form_label(formulario.destinoVuelcoTipo) }}
                        {{ form_widget(formulario.destinoVuelcoTipo) }}
                    </div> 
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <!-- residuos especiales -->
        <div class="card">
            <div class="card-body">
                <div class="btn-toolbar" role="toolbar">
                    <div class="pr-4 pt-2">
                        ¿Residuos especiales?
                    </div>
                    {% if showButton %}
                        <div class="btn-group mr-2" role="group">
                            <button id="btnResiduosEspecialesSi" type="button" class="btn btn-primary btn-sm">Si</button>
                        </div>
                        <div class="btn-group mr-2" role="group">            
                            <button id="btnResiduosEspecialesNo" type="button" class="btn btn-primary btn-sm">No</button>
                        </div>                        
                    {% endif %}
                </div> 
                <br/>
                <div class="form-group hideProduccion">
                    {{ form_widget(formulario.tieneResiduosEspeciales) }}
                </div> 
                <div id="divResiduosEspeciales">
                    <div class="form-group">
                        {{ form_label(formulario.tipoResiduoEspecial) }}
                        {{ form_widget(formulario.tipoResiduoEspecial) }}
                    </div> 
                    <div class="form-group">
                        {{ form_label(formulario.corrientes) }}
                        {{ form_widget(formulario.corrientes,{ 'attr': {'class': 'js-example-responsive','style':'width: 100%'} }) }}
                    </div> 
                    <div class="btn-toolbar" role="toolbar">
                        <div class="pr-4 pt-2">
                            ¿Emisiones gaseosas?
                        </div>
                        {% if showButton %}
                            <div class="btn-group mr-2" role="group">
                                <button id="btnEmisionesSi" type="button" class="btn btn-primary btn-sm">Si</button>
                            </div>
                            <div class="btn-group mr-2" role="group">            
                                <button id="btnEmisionesNo" type="button" class="btn btn-primary btn-sm">No</button>
                            </div>                        
                        {% endif %}
                    </div> 
                    <br/>
                    <div class="form-group hideProduccion">
                        {{ form_widget(formulario.tieneEmisionesGaseosas) }}
                    </div> 
                    <div class="form-group" id="divTipoEmisionGaseosa">
                        {{ form_label(formulario.tipoEmisionGaseosa) }}
                        {{ form_widget(formulario.tipoEmisionGaseosa) }}
                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>
<hr/>
<div class="row">
    <div class="col-6">
        <!-- varios -->
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    {{ form_label(formulario.potenciaTotalUtilizada) }}
                    {{ form_widget(formulario.potenciaTotalUtilizada) }}
                </div> 
                <div class="form-group">
                    {{ form_label(formulario.CURT) }}
                    {{ form_widget(formulario.CURT) }}
                </div> 
                <div class="form-group">
                    {{ form_label(formulario.fechaUltimaInpeccion) }}
                    {{ form_widget(formulario.fechaUltimaInpeccion) }}
                </div> 
            </div>
        </div>
    </div>
    <div class="col-6">
        <!-- denuncias y reclamos -->
        <div class="card">
            <div class="card-body">
                <div class="btn-toolbar" role="toolbar">
                    <div class="pr-4 pt-2">
                        <p>
                        ¿Tiene antecedente de reclamo de vecinos o denuncias?
                        </p>
                    </div>
                    {% if showButton %}
                        <div class="btn-group mr-2" role="group">
                            <button id="btnDenunciasSi" type="button" class="btn btn-primary btn-sm">Si</button>
                        </div>
                        <div class="btn-group mr-2" role="group">            
                            <button id="btnDenunciasNo" type="button" class="btn btn-primary btn-sm">No</button>
                        </div>                        
                    {% endif %}
                </div> 
                <br/>
                <div class="form-group hideProduccion">
                    {{ form_widget(formulario.tieneDenuncia) }}
                </div> 
                <div id="divEspecificacionDenuncia" class="form-group">
                    {{ form_label(formulario.denunciasEspecificaciones) }}
                    {{ form_widget(formulario.denunciasEspecificaciones) }}
                </div> 
            </div>
        </div>
    </div>
</div>
