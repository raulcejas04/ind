<h4 class="card-title">Principal</h4>
<div class="row">
    <div class="col-6">
        <div class="form-group">
            {{ form_label(formulario.esDeposito) }}
            {{ form_widget(formulario.esDeposito) }}
        </div>  
    </div>   
    <div class="col-6">
        <div class="form-group">
            {{ form_label(formulario.esProduccion) }}
            {{ form_widget(formulario.esProduccion) }}
        </div>  
    </div>   
</div>
<hr/>
<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Domicilio Industrial/Real</h5>
                        {% include 'domicilio/_domicilio_lugar.html.twig' with {'domicilio':formulario.domicilio} only %}
                    </div>
                </div>
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Superficie</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(formulario.superficieTotal) }}<span  class="text-danger">*</span>:
                                    {{ form_widget(formulario.superficieTotal) }}
                                </div> 
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(formulario.siperficieCubierta) }}<span  class="text-danger">*</span>:
                                    {{ form_widget(formulario.siperficieCubierta) }}
                                </div> 
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(formulario.superficieLibre) }}<span  class="text-danger">*</span>:
                                    {{ form_widget(formulario.superficieLibre) }}
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Personal</h5>
                <div class="form-group">
                    {{ form_label(formulario.qPersonal) }}<span  class="text-danger">*</span>:
                    {{ form_widget(formulario.qPersonal) }}
                </div> 
                <div class="form-group">
                    {{ form_label(formulario.qPersonalFemenino) }}<span  class="text-danger">*</span>:
                    {{ form_widget(formulario.qPersonalFemenino) }}
                </div> 
                <div class="form-group">
                    {{ form_label(formulario.qPersonalTrans) }}<span  class="text-danger">*</span>:
                    {{ form_widget(formulario.qPersonalTrans) }}
                </div> 
                <div class="form-group">
                    {{ form_label(formulario.qPersonalDiscapacidad) }}<span  class="text-danger">*</span>:
                    {{ form_widget(formulario.qPersonalDiscapacidad) }}
                </div> 
                <div class="form-group">
                    {{ form_label(formulario.qPersonalResidenteAvellaneda) }}<span  class="text-danger">*</span>:
                    {{ form_widget(formulario.qPersonalResidenteAvellaneda) }}
                </div> 
            </div>
        </div>
    </div>
</div>
<hr/>

<!-- horarios de trabajo -->
<div class="row">
    <div class="col-md-12">

        <div class="row">
            <div class="col-6">
                <h5 class="card-title">Horarios de trabajo<span  class="text-danger">*</span></h5>
            </div>
            <div class="col-6">
                <div class="form-group">
                    {{ form_label(formulario.horarioRotativo) }}
                    {{ form_widget(formulario.horarioRotativo) }}
                </div> 
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 pb-2">
                <table class="table table-hover table-bordered ">
                    <thead class="thead-light">
                        <tr class="d-flex" >
                            <th id="headerId" class="col-4">
                                <div class="float-left">
                                    DÃ­a
                                </div>
                            </th>                            
                            <th id="headerDesc" class="col-4">
                                <div class="float-left">
                                    Inicio
                                </div>
                            </th>
                            <th id="headerDesc" class="col-4">
                                <div class="float-left">
                                    Fin
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for horario in formulario.horariosTrabajo %}
                            <tr class="d-flex">
                                <td class="col-4"> {{ form_widget(horario.dia) }}</td>
                                <td class="col-4 text-center">{{ form_widget(horario.horaInicio)}}</td>
                                <td class="col-4 text-center">{{ form_widget(horario.horaFin)}}</td>
                            </tr>
                        {%  endfor %}     
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<hr/>
<div class="row">
    <div class="col-md-12">
        <div class="card">
