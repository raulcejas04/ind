{% extends 'base.html.twig' %}

{% block title %}Cambio de contraseña{% endblock %}

{% block body %}
    <div class="container w-100 p-3">
        <div class="card mx-auto">  
            <div class="card-header bg-info" >
                <h4 class="text-light mb-3 font-weight-normal">Cambiar Contraseña</h4>     
            </div>
            <div class="card-body">
                {% if errores %}
                    {% for error in errores %}
                        <div class="alert alert-danger" role="alert">
                            {{ error }}
                        </div>
                    {% endfor %}
                {% endif %}
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.password_vieja) }}
                    {{ form_widget(form.password_vieja) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.password) }}
                    {{ form_widget(form.password) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.repetir_password) }}
                    {{ form_widget(form.repetir_password) }}
                </div>

                {{ form_widget(form.cambiar) }}
                {{ form_end(form) }}

            </div>

        </div>
    </div>
{% endblock %}