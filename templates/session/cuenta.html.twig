{% extends 'base.html.twig' %}
{% block title %}Mi Cuenta{% endblock %}
{% block body %}
    <div class="row p-3">
        <div class="col-sm-3">
            <div class="card">
                <ul class="list-group list-group-flush">                       
                    <a class="list-group-item list-group-item-action active" href="{{ path("session_cuenta") }}">Datos Usuario</a>                        
                    <a class="list-group-item list-group-item-action" href="{{ path("cambiar_password") }}">Cambiar Contrase√±a</a> 
                    <a class="list-group-item list-group-item-action" href="{{ path("cambiar_img_perfil") }}">Cambiar Imagen de Perfil</a>
                </ul>
            </div>
        </div>
        <div class="col-sm-9">
            <div class="card mx-auto ">               
                <div class="card-body"> 
                    <div class="container center">
                        <div class="form-group row">
                            <div class="col-sm-5">
                                <label class="font-weight-bold">Usuario:</label>                        
                            </div>
                            <div class="col-sm-7">
                                <p>{{ usuario.Username }}</p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-5">
                                <label class="font-weight-bold">Nombre:</label>                        
                            </div>
                            <div class="col-sm-7">
                                <p>{{ usuario.Nombre }}</p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-5">
                                <label class="font-weight-bold">Apellido:</label>                        
                            </div>
                            <div class="col-sm-7">
                                <p>{{ usuario.Apellido }}</p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-5">
                                <label class="font-weight-bold">E-Mail:</label>                        
                            </div>
                            <div class="col-sm-7">
                                <p>{{ usuario.Email }}</p>
                            </div>
                        </div>
                        <div class="btn-toolbar d-flex flex-row-reverse"> 
                            <a class="btn btn-primary" href="{{ path("session_editar_datos") }}"><span class="fa fa-edit"></span> Editar</a>  
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>      

{%  endblock %}