{{ form_start(domicilio) }}
<div class="row">

    <div class="col-6 {{esconderParaLugar == "true" ? "d-none"}}">
        <div class="form-group">
            {{ form_label(domicilio.provincia) }}
            {{ form_widget(domicilio.provincia, { 
                'attr': {
                    'data-departamento-url': path('industria_departamento_select'),
                    'class': ' searchabledropdown js-industria-form-provincia '
                }  }) }}
        </div>
        <div class="js-departamento-target">
            {% if domicilio.departamento is defined %}
                <div class="form-group">
                    {{ form_label(domicilio.departamento) }}
                    {{ form_widget(domicilio.departamento, { 
                     'attr': {
                         'data-localidad-url': path('industria_localidad_select'),
                    'class': ' searchabledropdown js-industria-form-departamento'
                    } 
                }) }}
                </div>
            {% endif %}
        </div>

        <div class="js-localidad-target">
            {% if domicilio.localidad is defined %}
                <div class="form-group">
                    {{ form_label(domicilio.localidad) }}
                    {{ form_widget(domicilio.localidad, {
                    'attr': {
                         'data-calle-url': path('industria_calle_select'),
                    'class': ' searchabledropdown js-industria-form-localidad'
                    } 
                     }) }}
                </div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(domicilio.cp) }}
            {{ form_widget(domicilio.cp) }} 
        </div>

    </div>
    <div class="{{esconderParaLugar == "true" ? "col-12" : "col-6"}}">  
        <div class="js-calle-target">
            {% if domicilio.calle is defined %}
                <div class="form-group">
                    {{ form_label(domicilio.calle) }}
                    {{ form_widget(domicilio.calle, { 'attr': {'class': 'searchabledropdown'} }) }}
                </div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(domicilio.puerta) }}
            {{ form_widget(domicilio.puerta) }}
        </div>

    </div>
</div>
{{ form_end(domicilio) }}